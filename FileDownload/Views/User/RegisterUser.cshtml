
@model RegisterUserDto
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm" style="border-radius: 10px;">
                <div class="card-header bg-gradient bg-primary text-white text-center" style="border-top-left-radius: 10px; border-top-right-radius: 10px;">
                    <h4 class="mb-0">🚀 Create Your Account</h4>
                </div>
                <div class="card-body bg-light">
                    <form asp-controller="User" asp-action="RegisterUser" method="post">
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Name" class="form-label">Full Name</label>
                                <input type="text" class="form-control shadow-sm" asp-for="Name" placeholder="Enter your full name">
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="Username" class="form-label">Username</label>
                                <input type="text" class="form-control shadow-sm" asp-for="Username" placeholder="Choose a username">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email address</label>
                            <input type="email" class="form-control shadow-sm" asp-for="Email" placeholder="Enter your email">
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label">Password</label>
                            <input type="password" class="form-control shadow-sm" asp-for="Password" placeholder="Create a password">
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>

                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="Address" class="form-label">Address</label>
                                <input type="text" class="form-control shadow-sm" asp-for="Address" placeholder="Enter your address">
                                <span asp-validation-for="Address" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                                <input type="tel" class="form-control shadow-sm" asp-for="PhoneNumber" placeholder="e.g. +977-9876543210">
                                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="d-grid">
                            <button type="submit" class="btn btn-success fw-bold" style="letter-spacing: 1px;">Register</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
