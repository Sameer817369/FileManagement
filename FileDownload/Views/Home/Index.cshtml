@{
    ViewData["Title"] = "Home";
}

<div class="container py-5">
    <div class="row min-vh-100 align-items-center">
        <!-- Left Text Content -->
        <div class="col-lg-6">
            <span class="badge bg-primary bg-opacity-10 text-primary px-3 py-2 rounded-pill mb-3">
                <i class="bi bi-star-fill me-1"></i> Professional File Management
            </span>

            <h1 class="display-4 fw-bold text-dark mb-4 lh-sm">
                Streamline Your
                <span class="text-primary position-relative">
                    File Management
                    <svg class="position-absolute top-100 start-0 w-100" height="12" viewBox="0 0 300 12" fill="none">
                        <path d="M2 10C100 2 200 2 298 10" stroke="#0d6efd" stroke-width="3" stroke-linecap="round" />
                    </svg>
                </span>
                Workflow
            </h1>

            <p class="fs-5 text-muted mb-5 lh-base">
                Create, organize, and manage your files with our intuitive platform.
                Built for professionals who value efficiency and elegance.
            </p>

            <div class="d-flex flex-column flex-sm-row gap-3">
                <a class="btn btn-primary btn-lg px-4 py-3 rounded-3 shadow-sm d-flex align-items-center justify-content-center"
                   asp-controller="File" asp-action="Create">
                    <i class="bi bi-plus-circle me-2"></i>
                    <span class="fw-semibold">Create New File</span>
                </a>
                <a class="btn btn-outline-primary btn-lg px-4 py-3 rounded-3 d-flex align-items-center justify-content-center"
                   asp-controller="File" asp-action="Index">
                    <i class="bi bi-folder2-open me-2"></i>
                    <span class="fw-semibold">Browse Files</span>
                </a>
            </div>
        </div>

        <!-- Right Image Section -->
        <div class="col-lg-6 text-center">
            <img src="/fileHero.png" class="img-fluid rounded-3 shadow-lg" alt="File management illustration">
        </div>
    </div>
</div>

<style>
    .btn {
        transition: all 0.2s ease-in-out;
        border-width: 2px;
    }

        .btn:hover {
            transform: translateY(-2px);
        }
</style>