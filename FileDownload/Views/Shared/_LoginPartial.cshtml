@using Microsoft.AspNetCore.Identity

@inject SignInManager<AppUser> SignInManager
@inject UserManager<AppUser> UserManager


@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item  dropdown hover-zoom z-3">
        <a class="nav-link dropdown-toggle text-dark btn-click" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            <i class="bi bi-person-circle text-success"></i> Profile
        </a>
        <ul class="dropdown-menu">
            <li class="nav-item hover-zoom">
                <form method="post" class="form-inline" asp-controller="User" asp-action="Logout">
                    <button type="submit" class="dropdown-item text-dark">
                        <i class="bi bi-box-arrow-left text-success"></i> Logout
                    </button>
                </form>
            </li>
        </ul>
    </li>
 
}
else
{
 

    <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle text-dark" role="button" data-bs-toggle="dropdown" aria-expanded="false">
            Account
        </a>
        <ul class="dropdown-menu" aria-labelledby="userDropdown">
            <li>
                <a class="dropdown-item" asp-controller="User" asp-action="RegisterUser">Register</a>
            </li>
            <li>
                <a class="dropdown-item" asp-controller="User" asp-action="Login">Login</a>
            </li>
        </ul>
    </li>
}

